{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "type": "cppbuild",
            "command": "g++",
            "problemMatcher": ["$gcc"],
            "args": [
                "${workspaceFolder}/*.cpp",
                "-o",
                "${workspaceFolder}/SDL_Project",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_ttf"
            ],
            "group": "build"
        },
        {
            "label": "Compile Windows",
            "type": "cppbuild",
            "command": "g++",
            "problemMatcher": ["$gcc"],
            "args": [
                "-ISDL/include",
                "-LSDL/lib",
                "*.cpp",
                "-o",
                "SDL_Project.exe",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_ttf"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}